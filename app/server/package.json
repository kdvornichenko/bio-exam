{
	"name": "@bio-exam/server",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"engines": {
		"node": "24"
	},
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "rimraf dist && tsc -p tsconfig.json",
		"start": "node --enable-source-maps dist/index.js",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"drizzle:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"drizzle:migrate": "tsx src/scripts/apply-migration.ts",
		"drizzle:studio": "drizzle-kit studio --config=drizzle.config.ts",
		"seed": "tsx src/db/seed.ts",
		"seed:sidebar": "tsx src/scripts/seed-sidebar.ts",
		"bootstrap:admin": "tsx src/scripts/bootstrap-admin.ts"
	},
	"dependencies": {
		"@bio-exam/rbac": "*",
		"bcryptjs": "^3.0.2",
		"chokidar": "^4.0.3",
		"cors": "^2.8.5",
		"cyrillic-to-translit-js": "^3.2.1",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.45.1",
		"express": "^4.19.2",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"minisearch": "^7.2.0",
		"multer": "^2.0.2",
		"pg": "^8.16.3",
		"pino": "^10.0.0",
		"pino-http": "^11.0.0",
		"remove-markdown": "^0.6.2",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^25.0.3",
		"@types/pg": "^8.15.5",
		"@types/sharp": "^0.32.0",
		"@vercel/node": "^3.0.22",
		"drizzle-kit": "^0.31.5",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"packageManager": "yarn@4.12.0"
}
