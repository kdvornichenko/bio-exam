{
	"name": "bio-exam",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*",
		"app/web",
		"app/server"
	],
	"scripts": {
		"build:rbac": "yarn workspace @bio-exam/rbac build",
		"build:server": "yarn build:rbac && yarn workspace @bio-exam/server build",
		"build": "yarn build:rbac && concurrently \"yarn --cwd app/server build\" \"yarn --cwd app/web build\"",
		"start": "concurrently \"yarn --cwd app/server start\" \"yarn --cwd app/web start\"",
		"prod": "yarn build && yarn start",
		"dev": "yarn build:rbac && concurrently \"yarn --cwd app/server dev\" \"yarn --cwd app/web dev\""
	},
	"devDependencies": {
		"baseline-browser-mapping": "^2.8.32",
		"concurrently": "^8.2.2"
	},
	"resolutions": {
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2"
	},
	"packageManager": "yarn@4.12.0"
}
